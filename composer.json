{
    "name": "ifcastle/exceptions",
    "type": "library",
    "description": "A basic library for exceptions with templates, oriented towards usage in web services",
    "license": "MIT",
    "authors": [
        {
            "name": "Edmond Dantes",
            "email": "edmondifthen@proton.me"
        }
    ],
    "require": {
        "php": ">=8.3"
    },
    "autoload": {
        "psr-4": {
            "IfCastle\\Exceptions\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IfCastle\\Exceptions\\": "tests/"
        }
    },

    "require-dev": {
        "phpunit/phpunit": "^11.2",
        "rector/rector": "^1.2",
        "ifcastle/codestyle": "^0.1.7",
        "phpstan/phpstan": "^1.12"
    },
    "scripts": {
        "test": "vendor/bin/phpunit ./tests",
        "analysis": "phpstan"
    }
}
